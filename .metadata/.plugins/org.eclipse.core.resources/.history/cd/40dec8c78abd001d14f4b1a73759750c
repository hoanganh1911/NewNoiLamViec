/* USER CODE BEGIN 0 */
uint8_t _lastkey;
volatile bool keyChange = false;

void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
	__disable_irq();
	if(GPIO_Pin == PCF_INT_Pin)
		keyChange = true;
	__enable_irq();
}
